<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <!-- Tutorial "unit" -->
    <persistence-unit name="sbPersistenceUnit">
        <class>com.equinooxe.domain.User</class>
        <class>com.equinooxe.domain.UserRole</class>
        <class>com.equinooxe.domain.Organization</class>
        <class>com.equinooxe.domain.AgentUser</class>
        <class>com.equinooxe.domain.CleanRequest</class>
        <class>com.equinooxe.domain.CleanTask</class>
        <class>com.equinooxe.domain.Location</class>
        <class>com.equinooxe.domain.LocationGroup</class>
        <class>com.equinooxe.domain.ManagerUser</class>
        <class>com.equinooxe.domain.Permission</class>
        <class>com.equinooxe.domain.Role</class>
        <class>com.equinooxe.domain.RolePermission</class>
        <class>com.equinooxe.domain.RolesPermission</class>
        <class>com.equinooxe.domain.Task</class>
        <class>com.equinooxe.domain.TaskDefinition</class>
        <exclude-unlisted-classes/>

        <properties>
            <!-- ENABLE THESE FOR MySQL/MariaDB -->
            <!-- Change the "nucleus" to your database name, and the user/password -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1/appnh?useServerPrepStmts=false"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="123456"/>
            
            <property name="datanucleus.schema.autoCreateAll" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
