<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <!-- Persistence unit -->
    <persistence-unit name="sbPersistenceUnit">
        <properties>
            <!-- Datasource properties -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1/appnh?useServerPrepStmts=false"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="123456"/>
            <!-- Hibernate properties -->
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="false"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.current_session_context_class" value="thread"/>
			<!-- SQL dialect -->
			<property name="dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
        </properties>
    </persistence-unit>

</persistence>
