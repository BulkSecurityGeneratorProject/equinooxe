{% extends "../../layout" %}
{% block title %}
    Détails batiment
{% endblock %}
{% block content %}
<div class="titre"> 
  <i class="fa fa-plus"></i>   Détails du batiment: {{ batiment.nom | capitalize }}  
  <div class="dropdown pull-right">
	                             <a href="#" class="dropdown-toggle card-drop" title="Options" data-toggle="dropdown" aria-expanded="false">
	                                  <i style="font-size: 18px" 
	                                     class="ti-settings"
	                                     ></i>
	                             </a>
	                            <ul class="dropdown-menu" role="menu">
	                                 <li>
	                                 	<a href="{{ href('/espaces/batiment')}}/{{ batiment.id }}/etage/new" >Ajouter étage </a>
	                                 </li>
	                                 <li><a href="{{ href('/espaces/batiment/edit')}}/{{ batiment.id }}" >Editer </a>
	                                 </li>
	                            </ul>
  </div>
</div>
<table  class="table table-kv " >
   <tr>
      <td>Nom:</td>
      <td>{{ batiment.nom | capitalize  }} </td>
   </tr>
   <tr>
      <td>Description:</td>
      <td>{{ batiment.description  }} </td>
   </tr>
   <tr>
      <td>Etages:</td>
      <td>
         <div id="ListEtagesComponent"></div>
      </td>
   </tr>
   <tr>
      <td>Adresse:</td>
      <td>{{ batiment.adresse   }} </td>
   </tr>
</table>
<hr>
<div id="BatimentSystemStatus"></div>

<script id="BatimentEntity" type="application/json">
   {{ batiment|raw }} 
</script>
<script>
  System.import('espaces/batiment/index.js');
  console.log('espaces.config louded!');   
</script>         
{% endblock %}
{% block appImport %}
{% endblock %}